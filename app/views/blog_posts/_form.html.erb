<%= form_with model: blog_post, class: 'max-w-2xl mx-auto mt-8' do |form| %>
  <% if form.object.errors.any? %>
    <div class="mb-4">
      <% form.object.errors.full_messages.each do |message| %>
        <div class="text-red-500"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: 'text-xl font-semibold mb-2' %>
    <%= form.text_field :title, class: 'w-full border border-gray-300 rounded p-2' %>
  </div>
  
  <div class="mb-8">
    <%= form.label :body, class: 'text-xl font-semibold mb-2' %>
    <%= form.text_area :body, class: 'w-full border border-gray-300 rounded p-2' %>
  </div>

  <%= form.button 'Submit', class: 'bg-blue-500 text-white rounded px-4 py-2 hover:bg-blue-600' %>
<% end %>
